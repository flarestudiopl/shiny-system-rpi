{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "ConfigurationFiles": {
    "BuildingModel": "building.json",
    "StorageDatabase": "storage.db"
  },
  "PlatformIntegration":  {
    "PowerOffCommand": "cmd.exe",
    "PowerOffArguments": "/C msg * \"Power off requested by Shiny\"",
    "SetDateTimeCommand": "cmd.exe",
    "SetDateTimeArguments":  "/C msg * \"Date should be UTC: {0:yyyy-MM-dd HH:mm} or local: {1:yyyy-MM-dd HH:mm}.\""
  },
  "Jwt": {
    "Issuer": "Shiny"
  }
}
